@model IEnumerable<QuanLiCuaHang.Models.LoaiSanPham>

@{
    ViewBag.Title = "Test";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<style>
    .button {
        border: none;
        color: blue;
        padding: 8px 0px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 2px 0px 2px 900px;
        transition-duration: 0.4s;
        cursor: pointer;
        float: right;
    }

    .button1 {
        background-color: whitesmoke;
        color: black;
        border: 3px solid #4CAF50;
</style>

<h2 style="text-align:center; color:red">Danh sách các loại sản phẩm</h2>

    <button type="button" class="button button1">
        Thêm sản phẩm
    </button>
<table class="table">
    <tr>
        <th style="color:blue">
            Tên loại sản phẩm
        </th>
        <th style="color:blue">
            Phần Trăm Lợi Nhuận
            @*@Html.DisplayNameFor(model => model.PhanTramLoiNhuan)*@
        </th>
        <th style="color:blue">
            Mã đơn vị tính
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.TenLoaiSP)
            </td>
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.PhanTramLoiNhuan)
            </td>
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.MaDVT)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Sửa", new { id = item.MaLoaiSP }) |
                @Html.ActionLink("Chi Tiết", "Chi tiết", new { id = item.MaLoaiSP }) |
                @Html.ActionLink("Xóa", "Xóa", new { id = item.MaLoaiSP })
            </td>
        </tr>
    }

</table>
